<%= image_tag(@play.photo, width: 200) if @play.photo.attached? %>

<h2 class=""> <%=@play.title %> </h2>
<h3 class=""> <%=@play.director %> </h3>
<% unless @play.category.nil? %>
  <h4 class="">
  <%=  @play.category.name %>
    </h4>
<%end %>

<p class=""> <%=@play.description %> </p>

<div class="links btn-groups">
  <% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
        <%= link_to  "edit", edit_play_path(@play) %>
        <%= link_to  "delete", play_path(@play), method: :delete, data: { confirm: "Are you sure?"}%>
    <%end %>
  <%end %>
  <%= link_to  "back", root_path%>
</div>
