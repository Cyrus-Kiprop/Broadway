<h1 class="current-category">
  <%=params[:category] %>
</h1>

<% if @plays.nil? || @plays.count ==  0 %>

  <h3><%= "There are no plays tagged #{params[:category]}" %></h3>
<% else %>
  <%  @plays.each do |play| %>
    <div class="col-md-3">
      <a href="/plays/<%= play.id %>">
        <%= image_tag(play.photo, width: 200, class: 'play') if play.photo.attached? %>
      </a>
    </div>
  <% end %>
<% end %>


